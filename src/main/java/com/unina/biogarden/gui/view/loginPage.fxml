<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="loginPage" alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unina.biogarden.gui.controller.LoginController">
   <children>
      <VBox alignment="CENTER" maxHeight="250.0" maxWidth="400.0" style="-fx-border-color: red; -fx-border-width: 2px; -fx-border-radius: 20;">
         <children>
            <Text text="Login">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Text>
            <Text text="Username">
               <VBox.margin>
                  <Insets bottom="5.0" top="25.0" />
               </VBox.margin>
            </Text>
            <TextField fx:id="usernameField" promptText="Inserisici il tuo username" style="-fx-max-width: 250;" styleClass="textField" />
            <Text text="Password">
               <VBox.margin>
                  <Insets bottom="5.0" top="15.0" />
               </VBox.margin>
            </Text>
            <PasswordField fx:id="passwordField" promptText="Inserisci la tua password" style="-fx-max-width: 250;" />
            <Button fx:id="loginButton" onAction="#handleLogin" text="Accedi">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Non hai un account?" />
            <Hyperlink onAction="#goToSignin" text="Registrati" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
